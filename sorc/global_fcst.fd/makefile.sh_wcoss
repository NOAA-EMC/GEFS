#  export F90M=mpif90
#  export LDRM=mpif90
   export FCC=cc
#  export LDFLAGSM="$PGSZM -openmp"                 #raghu.reddy
   export LDFLAGSM="$PGSZM -openmp -mkl"            #raghu.reddy
#  export FINC=-I$LIBDIR/incmod/esmf_3_1_0rp5
