 export LIBDIR=/scratch2/portfolios/NCEPDEV/global/save/Shrinivas.Moorthi/para/lib_test2
 export ESMFDIR=${ESMF_DIR:-$LIBDIR}
elif [ $mac = t -o $mac = e -o $mac = g ] ; then
 machine=wcoss
